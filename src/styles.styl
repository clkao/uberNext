@import 'nib'
@keyframes spin
  0%
    transform rotate(0deg)

  100%
    transform rotate(360deg)

.logo img
  height 80%
  position absolute
  right 10%
  &.active
    border 5px solid rgba(0,183,229,0.9)
    opacity .9
    background-color rgba(0,0,0,0)
    border-top 5px solid rgba(0,0,0,0)
    border-left 5px solid rgba(0,0,0,0)
    border-radius 50px
    box-shadow 0 0 35px #2187e7
    animation spin .5s infinite linear

img.face
  width: 36px
  height: 36px

ul.vehicles
  li
    display: inline-block
    padding-right: 5px
    color: #111111
    &:before
      content: '\2713'
      color: #0f9d58

material-whiteframe.selector
  position: absolute
  background: white
  right: 0

label.selected[flex]
  padding: 0 !important
